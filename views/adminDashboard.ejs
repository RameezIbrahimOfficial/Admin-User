<%- include("partials/header") %>

<div class="container">
  <h1>Welcome to Admin Dashboard</h1>

  <div class="text-right">
    <a href="/admin/new-user" class="btn btn-primary">Add New User</a>
    <a href="/admin/logout" class="btn btn-secondary">Logout</a>
  </div>

  <br />

  <form class="mb-3" action="/searchuser" method="post">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search Users" name="search"/>
      <div class="input-group-append">
        <input type="submit" class="btn btn-primary" value="Search" />
      </div>
    </div>
  </form>
  <% if (users.length > 0) { %>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Password</th>

        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < users.length; i++) { %>
      <tr>
        <td><%=users[i].email %></td>
        <td><%=users[i].fname %></td>
        <td><%=users[i].lname %></td>
        <td><%=users[i].password %></td>

        <td>
          <a href="/admin/updateUser" class="btn btn-primary">Edit</a>
          <a href="/admin/deleteUser" class="btn btn-danger">Delete</a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<% } else { %>
  <p>Users Not found</p>
<% } %>
<%- include("partials/footer") %>
